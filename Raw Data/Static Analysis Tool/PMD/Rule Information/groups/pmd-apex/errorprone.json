{
  "name": "Error Prone",
  "description": "Rules to detect constructs that are either broken, extremely confusing or prone to runtime errors.",
  "rules": [
    "ApexCSRF",
    "AvoidDirectAccessTriggerMap",
    "AvoidHardcodingId",
    "AvoidNonExistentAnnotations",
    "AvoidStatefulDatabaseResult",
    "EmptyCatchBlock",
    "EmptyIfStmt",
    "EmptyStatementBlock",
    "EmptyTryOrFinallyBlock",
    "EmptyWhileStmt",
    "InaccessibleAuraEnabledGetter",
    "MethodWithSameNameAsEnclosingClass",
    "OverrideBothEqualsAndHashcode",
    "TestMethodsMustBeInTestClasses",
    "TypeShadowsBuiltInNamespace"
  ]
}